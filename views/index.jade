div#header.true.clearfix
	div.container.clearfix
		span#logo
			a.site-logo(href="https://how2read.me/", title="Make readings really universal")= title
		div#userbox
			div#user
				span Welcome 
					a.name user
				
div#content
	div.container.clearfix
		div#mainbar
			- for(var i in terms)
				div.term
					div.statscontainer
						- var name = 'term' + terms[i].id
						canvas(id=name)
					div.summary
						h3= terms[i].name
						span.reading 
							a(href="")= terms[i].reading
						div.incorrect 
							ul.readings
								li(title="Chinese")
								span 阿帕奇
							div.tags
								a.tags(href="/tags") web-server
								a.tags(href="/tags") Unix
							div.report
								input.report-right(type="button", value="我读对了", url="/term/"+terms[i].id) 
								input.report-wrong(type="button", value="我读错了", url="/term/"+terms[i].id) 	
		div#sidebar
			div#newlyApproved
			div#newlyAdded
			div#notApproved
div#footer
	div.container.clearfix
		div#legal
			span All Rights Reserved.
			span Email: xqzhang@thoughtworks.com  
			span website: 
				a(href="http://xiaoqing.me") http://xiaoqing.me  
			span weibo(@aqingsao)  
