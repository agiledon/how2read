div#header.true.clearfix
	div.container.clearfix
		div#logo
			h2
				a.site-logo(href="https://how2read.me/", title="Make pronunciation really universal")= title
			p 程序员最容易读错的单词
				
div#content
	div.container.clearfix
		div#mainbar
			- for(var i in terms)
				div.term(id=terms[i].id)
					div.statscontainer
						img.stats(src='images/stats.png', wrong=terms[i].wrong_count, right=terms[i].right_count, )
						canvas(width=132, height=132, id='term' + terms[i].id)
					div.summary
						h2= terms[i].name 
						span.pronunciation 
								a(href="")= '[' + terms[i].pronunciation + ']'
						div.description= terms[i].description
							-if(terms[i].source)
								a(href=terms[i].source)
									img(src="/images/external_link.jpg", title="去官方网站")
						div.vote
							label.rate
								span= '0%'
								的人读错了，您呢？
							form.report(method="POST", action="/term/#{terms[i].id}")
								input(type="hidden", value="#{terms[i].id}", name="id") 
							-if (cookies.hasKey(terms[i].id))
								-if (cookies.getValue(terms[i].id) == 'true')
									input.result.right(disabled='disabled', value='您读对了')
								-else
									input.result.wrong(disabled='disabled', value='您读错了')
							-else
								span.votable
									input.right(type="submit", value="我读对了") 
									audio
										source(type="audio/mpeg", src="audio/"+terms[i].audio)
								span.votable			
									input.wrong(type="submit", value="我读错了") 
									audio
										source(type="audio/mpeg", src="audio/"+terms[i].audio)
						div#ckepop.share
							span.jiathis_txt 分享到
							a.jiathis_button_tsina 新浪微博
							a.jiathis_button_tqq 腾讯微薄
							
		div#sidebar
			div#newlyApproved
			div#newlyAdded
			div#notApproved
