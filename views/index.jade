div#header.true.clearfix
	div.container.clearfix
		div#logo
			h2
				a.site-logo(href="https://how2read.me/", title="Make pronunciation really universal")= title
			p 程序员最容易读错的单词
				
div#content
	div.container.clearfix
		div#mainbar
			- for(var i in terms)
				div.term(id=terms[i].id)
					div.statscontainer
						img.stats(src='images/stats.png', wrong=terms[i].wrong, right=terms[i].right)
						canvas(width=132, height=132, id='term' + terms[i].id)
					div.summary
						h2.name= terms[i].name 
						div.description= terms[i].description
							-if(terms[i].source)
								a(href=terms[i].source)
									img(src="/images/external_link.jpg", title="去官方网站")
						div.vote
							label.rate
								span= '0%'
								的人读错了，您呢？
							-var voted = cookies.hasKey(terms[i].id);
							-for(var j in terms[i].readings)
								span.votable
									-if (voted == terms[i].readings[j].id)
										-if (terms[i].readings[j].correct == 'true')
											input.voted.right(type="submit", value="您读对了", reading="#{terms[i].readings[j].id}") 
										-else
											input.voted.wrong(type="submit", value="您读错了", reading="#{terms[i].readings[j].id}") 
									-else
										-if (terms[i].readings[j].correct == 'true')
											input.voted.right(type="submit", value="", reading="#{terms[i].readings[j].id}") 
										-else
											input.voted.wrong(type="submit", value="", reading="#{terms[i].readings[j].id}") 
									audio
										source(type="audio/mpeg", src="audio/"+terms[i].readings[j].audio)
							input.error(disabled='disabled', value='对不起，投票错误')
						div#ckepop.share
							span.jiathis_txt 分享到
							a.jiathis_button_tsina 新浪微博
							a.jiathis_button_tqq 腾讯微薄
							
		div#sidebar
