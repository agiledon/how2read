div#header.true.clearfix
	div.container.clearfix
		span#logo
			a.site-logo(href="https://how2read.me/", title="Make readings really universal")= title
		div#userbox
			div#user
				span Welcome 
					a.name user
				
div#content
	div.container.clearfix
		div#mainbar
			- for(var i in terms)
				- var id= terms[i].id, name = 'term' + id, rightCount = terms[i].right_count, wrongCount = terms[i].wrong_count;
				div.term(id=terms[i].id)
					div.statscontainer
						label Correct: 
							span.right= terms[i].right_count
						br
						label Wrong:
							span.wrong= terms[i].wrong_count
					div.summary
						h2= terms[i].name
						span.reading 
							a(href="")= '[' + terms[i].reading + ']'
							audio(src="http://audio.dict.cn/mp3.php?q=8xZwT", type="audio/mpeg")
						div.description= terms[i].description
						div.report
							label.rate
								span= wrongCount
								的人读错这个单词
							form.report(method="POST", action="/term/#{id}")
								input(type="hidden", value="#{id}", name="id") 
								input(type="hidden", value="true", name="isCorrect") 
								input.right(type="submit", value="我读对了") 
							form.report(method="POST", action="/term/#{id}")
								input(type="hidden", value="#{id}", name="id") 
								input(type="hidden", value="false", name="isCorrect") 
								input.wrong(type="submit", value="我读错了") 	
		div#sidebar
			div#newlyApproved
			div#newlyAdded
			div#notApproved
div#footer
	div.container.clearfix
		div#legal
			span All Rights Reserved.
			span Email: xqzhang@thoughtworks.com  
			span website: 
				a(href="http://xiaoqing.me") http://xiaoqing.me  
			span weibo(@aqingsao)  
